---
import type { Props } from '@astrojs/starlight/props'
import StarlightPage, { type StarlightPageProps } from '@astrojs/starlight/components/StarlightPage.astro'
export const prerender = true;


const frontmatter: StarlightPageProps['frontmatter'] = {
  title: 'It seems you do not have the necessary permssions to access this resource.',
  template: 'splash',
  hero: {
    tagline: 'You may need to log in, or ask for more permissions from the system administrator.',
    actions: [
      {
      text: 'Sign in',
        link: '/auth/signin',
        icon: 'right-arrow',
        variant: 'primary'
      },
    ]
  }
}
---

<StarlightPage {frontmatter}>
</StarlightPage>

<style>
  .action {
		gap: 0.5em;
		align-items: center;
		border-radius: 1rem;
		padding: 0.75rem 1.5rem;
		line-height: 1.1875;
		text-decoration: none;
		font-size: var(--sl-text-sm);
    font-weight: bold;
		background: var(--sl-color-red-high);
		color: var(--sl-color-black);
	}
</style>
